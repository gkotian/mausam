            android:layout_height="wrap_content"
            android:layout_weight="1" >

        <TextView
            android:id="@+id/textViewTemperature"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewPressure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewHumidity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </TableRow>

